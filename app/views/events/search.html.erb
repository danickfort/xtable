<h1>Search results</h1>

<%= render 'search' %>
<br/>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Participate</th>
		</tr>
	</thead>

	<tbody>
		<% @search.each do |event| %>
		<tr>
			<td><%= link_to event.name, event %></td>
			<td><%= event.description %></td>
			<% if event.users.include? current_user %>
			<td><%= link_to icon('minus-circle'), event_unparticipate_path(event.id) %></td>
			<% else %>
			<td><%= link_to icon('plus-circle'), event_participate_path(event.id) %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<%= will_paginate @search, renderer: BootstrapPagination::Rails %>

<br>
