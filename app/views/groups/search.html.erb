<h1>Search results</h1>

<%= render 'search' %>
<br/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Subscribe</th>
    </tr>
  </thead>

  <tbody>
    <% @search.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= group.description %></td>
        <td>+</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @search, renderer: BootstrapPagination::Rails %>

<br>
