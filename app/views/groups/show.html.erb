<p id="notice">
	<%= notice %>
</p>

<h1><%= @group.name %></h1>

<%= link_to 'Subscribe now !', group_subscribe_path(@group) %>

<h2>What ?</h2>
<p>
	<%= @group.description %>
</p>
<table>
	<tr>
		<th>Event</th>
		<th>Subscribe</th>
	</tr>
	<% @events.each do |event| %>
	<tr>
		<td><%= link_to event.name, event %></td>
		<td>+</td>
	</tr>
	<% end %>
</table>

<h2>Who's the boss ?</h2>
<table>
	<tr>
		<th>Members</th>
	</tr>
	<% @admins.each do |member| %>
	<tr>
		<td><%= member.name %></td>
	</tr>
	<% end %>
</table>

<h2>Who like that ?</h2>
<table>
	<tr>
		<th>Followers</th>
	</tr>
	<% @followers.each do |follower| %>
	<tr>
		<td><%= follower.name %></td>
	</tr>
	<% end %>
	
</table>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
