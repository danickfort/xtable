<h1>Visible Groups</h1>

<%= render 'search' %>
<br/>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Subscribe</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, group %></td>
        <td><%= group.description %></td>
        <td>+</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @groups, renderer: BootstrapPagination::Rails %>

<br>
